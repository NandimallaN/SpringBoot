package com.app;

import com.google.gson.Gson;
import com.google.gson.GsonBuilder;

public class App1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//convertObjToJson();
		convertObjToJson1();
	}

	public static void convertObjToJson1()
	   {
		GsonBuilder gsonBuilder = new GsonBuilder();
		 
		gsonBuilder.registerTypeAdapter(User.class, new User());
		 
		Gson gson = gsonBuilder.create();
		 
		System.out.println(
		            gson.fromJson("{'id':1,'Name':'Lokesh','gendr':'Gupta',}", 
		            User.class));
	   }
	
	   public static void convertObjToJson()
	   {
		   Gson gson = new Gson();

		   User user=new User(101, "Ramana", "Male", 983726383L);
		   String json = gson.toJson(user); 
		   System.out.println(json);
	   }
}
